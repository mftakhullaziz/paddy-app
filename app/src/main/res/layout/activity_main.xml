<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"/>

            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="Hasil prediksi penyakit padi pada gambar yaitu :"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="                                                                                  "
                    android:textSize="15sp" />

            <Button
                android:id="@+id/capture_image_btn1"
                android:text="Buka kamera"
                android:fontFamily="@font/droidsans"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_height="65dp"
                android:layout_marginBottom="-6dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/capture_image_btn2"
                android:text="Upload gambar dari gallery"
                android:fontFamily="@font/droidsans"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_height="65dp"
                android:layout_marginBottom="-6dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/predict_image_btn"
                android:text="Prediksi penyakit"
                android:fontFamily="@font/droidsans"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginBottom="-6dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/results_image_btn"
                android:text="Saran dan cara mengatasinya"
                android:fontFamily="@font/droidsans"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_below="@+id/results_image_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paddy App Version 1.0"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed-medium"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>