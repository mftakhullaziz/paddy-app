<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ResultActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_below="@+id/image_view_results"
                android:id="@+id/tv1"
                android:textColor="#474747"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis penyakit pada tanaman padi dan cara mengatasinya"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/robotoregular"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_below="@+id/image_view_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A. Blas"
                android:textColor="#474747"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/robotoregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/image_view"
                    android:src="@drawable/blas"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv3"
                android:layout_below="@+id/image_view_results"
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:textColor="#474747"
                android:text="@string/blas"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"/>

            <TextView
                android:layout_below="@+id/image_view_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Penyakit Hawar"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/droidsansbold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:src="@drawable/blas">
            </ImageView>

            <TextView
                android:layout_below="@+id/image_view_results"
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:textColor="#474747"
                android:text="@string/hawar"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>